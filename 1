#include <iostream>
using namespace std;

void drawSquare(int size) {
    for (int i = 0; i < size; i++) {
        for (int j = 0; j < size; j++) {
            cout << "* ";
        }
        cout << endl;
    }
}

void drawRectangle(int width, int height) {
    for (int i = 0; i < height; i++) {
        for (int j = 0; j < width; j++) {
            cout << "* ";
        }
        cout << endl;
    }
}

void drawTriangle(int height) {
    for (int i = 1; i <= height; i++) {
        for (int j = 0; j < i; j++) {
            cout << "* ";
        }
        cout << endl;
    }
}

void drawCircle(int radius) {
    for (int i = -radius; i <= radius; i++) {
        for (int j = -radius; j <= radius; j++) {
            if (i*i + j*j <= radius*radius)
                cout << "* ";
            else
                cout << "  ";
        }
        cout << endl;
    }
}

int main() {
    int choice;
    do {
        cout << "Виберіть фігуру для відображення:\n";
        cout << "1. Квадрат\n";
        cout << "2. Прямокутник\n";
        cout << "3. Трикутник\n";
        cout << "4. Коло\n";
        cout << "5. Вийти\n";
        cout << "Ваш вибір: ";
        cin >> choice;

        switch (choice) {
            case 1: {
                int size;
                cout << "Введіть розмір квадрата: ";
                cin >> size;
                drawSquare(size);
                break;
            }
            case 2: {
                int width, height;
                cout << "Введіть ширину і висоту прямокутника: ";
                cin >> width >> height;
                drawRectangle(width, height);
                break;
            }
            case 3: {
                int height;
                cout << "Введіть висоту трикутника: ";
                cin >> height;
                drawTriangle(height);
                break;
            }
            case 4: {
                int radius;
                cout << "Введіть радіус кола: ";
                cin >> radius;
                drawCircle(radius);
                break;
            }
            case 5:
                cout << "Вихід з програми.\n";
                break;
            default:
                cout << "Невірний вибір. Спробуйте знову.\n";
        }
        cout << endl;
    } while (choice != 5);

    return 0;
}
