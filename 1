#include <iostream>
using namespace std;

void drawRectangle(int width, int height) {
    for (int i = 0; i < height; i++) {
        for (int j = 0; j < width; j++) {
            cout << "* ";
        }
        cout << endl;
    }
}

int main() {
    int choice;
    do {
        cout << "Виберіть тип прямокутника для відображення:\n";
        cout << "1. Малий прямокутник\n";
        cout << "2. Середній прямокутник\n";
        cout << "3. Великий прямокутник\n";
        cout << "4. Вийти\n";
        cout << "Ваш вибір: ";
        cin >> choice;

        switch (choice) {
            case 1: {
                int width = 5, height = 3;
                drawRectangle(width, height);
                break;
            }
            case 2: {
                int width = 10, height = 6;
                drawRectangle(width, height);
                break;
            }
            case 3: {
                int width = 15, height = 9;
                drawRectangle(width, height);
                break;
            }
            case 4:
                cout << "Вихід з програми.\n";
                break;
            default:
                cout << "Невірний вибір. Спробуйте знову.\n";
        }
        cout << endl;
    } while (choice != 4);

    return 0;
}
